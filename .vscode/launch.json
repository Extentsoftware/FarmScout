    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug FarmScout (Windows)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/FarmScout/bin/Debug/net9.0-windows10.0.19041.0/win10-x64/FarmScout.dll",
            "args": [],
            "cwd": "${workspaceFolder}/FarmScout",
            "console": "internalConsole",
            "stopAtEntry": false,
            "env": {
                "DOTNET_ENVIRONMENT": "Development"
            }
        },
        {
            "name": "Debug FarmScout (dotnet run)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "dotnet",
            "args": [
                "run",
                "--framework",
                "net9.0-windows10.0.19041.0"
            ],
            "cwd": "${workspaceFolder}/FarmScout",
            "console": "internalConsole",
            "stopAtEntry": false,
            "env": {
                "DOTNET_ENVIRONMENT": "Development"
            }
        }
    ]
}