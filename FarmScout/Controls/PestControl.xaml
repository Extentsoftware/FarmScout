<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:FarmScout.ViewModels"
             x:Class="FarmScout.Controls.PestControl">
    <Border BackgroundColor="#F5F5F5" Padding="15">
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="10" />
        </Border.StrokeShape>
        <VerticalStackLayout Spacing="10">
            <Label Text="ðŸ› Pest Information" 
                   FontSize="18" 
                   FontAttributes="Bold"
                   TextColor="#2E7D32"/>
            
            <Entry Placeholder="Pest Name" 
                   Text="{Binding PestName}"
                   TextColor="Black"
                   BackgroundColor="White"
                   PlaceholderColor="#999"
                   IsReadOnly="{Binding x:DataType=viewmodels:ObservationViewModel, Path=IsViewMode}"/>
            
            <Entry Placeholder="Pest Count" 
                   Text="{Binding PestCount}"
                   TextColor="Black"
                   BackgroundColor="White"
                   PlaceholderColor="#999"
                   Keyboard="Numeric"
                   IsReadOnly="{Binding IsViewMode}"/>
        </VerticalStackLayout>
    </Border>
    
</ContentView> 