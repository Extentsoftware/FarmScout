<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FarmScout.Controls.DiseaseControl">
    
    <Border BackgroundColor="#F5F5F5" Padding="15">
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="10" />
        </Border.StrokeShape>
        <VerticalStackLayout Spacing="10">
            <Label Text="ðŸ¦  Disease Information" 
                   FontSize="18" 
                   FontAttributes="Bold"
                   TextColor="#2E7D32"/>

            <Entry Placeholder="Disease Name" 
                   Text="{Binding Source={RelativeSource AncestorType={x:Type ContentView}}, Path=DiseaseName}"
                   TextColor="Black"
                   BackgroundColor="White"
                   PlaceholderColor="#999"
                   IsReadOnly="True"/>

            <Entry Placeholder="Disease Type" 
                   Text="{Binding Source={RelativeSource AncestorType={x:Type ContentView}}, Path=DiseaseType}"
                   TextColor="Black"
                   BackgroundColor="White"
                   PlaceholderColor="#999"
                   IsReadOnly="True"/>

            <Entry Placeholder="Description" 
                   Text="{Binding Source={RelativeSource AncestorType={x:Type ContentView}}, Path=DiseaseDescription}"
                   TextColor="Black"
                   BackgroundColor="White"
                   PlaceholderColor="#999"
                   IsReadOnly="True"
                   HeightRequest="60"/>

            <Button Text="{Binding Source={RelativeSource AncestorType={x:Type ContentView}}, Path=DiseaseName, StringFormat='Select Disease: {0}', FallbackValue='Select Disease'}" 
                    BackgroundColor="{Binding Source={RelativeSource AncestorType={x:Type ContentView}}, Path=DiseaseName, Converter={StaticResource StringToBoolConverter}, ConverterParameter='#4CAF50|#2E7D32'}"
                    TextColor="White"
                    CornerRadius="8"
                    Padding="15,10"
                    Clicked="OnSelectDiseaseClicked"/>
        </VerticalStackLayout>
    </Border>
    
</ContentView> 