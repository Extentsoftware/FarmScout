<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FarmScout.Views.ObservationDetailPage"
             x:DataType="viewmodels:ObservationDetailViewModel"
             xmlns:viewmodels="clr-namespace:FarmScout.ViewModels"
             Title="{Binding Title}">
    
    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">
            
            <!-- Header -->
            <Label Text="📋 Observation Details" 
                   FontSize="24" 
                   FontAttributes="Bold" 
                   HorizontalOptions="Center"
                   TextColor="#2E7D32"/>
            
            <!-- Observation Types -->
            <Frame BackgroundColor="#F5F5F5" CornerRadius="10" Padding="15">
                <VerticalStackLayout Spacing="10">
                    <Label Text="📝 Observation Types" 
                           FontSize="18" 
                           FontAttributes="Bold"
                           TextColor="#2E7D32"/>
                    <Label Text="{Binding ObservationTypesText}" 
                           FontSize="16" 
                           TextColor="#666"/>
                </VerticalStackLayout>
            </Frame>
            
            <!-- Soil Moisture -->
            <Frame BackgroundColor="#F5F5F5" CornerRadius="10" Padding="15">
                <VerticalStackLayout Spacing="10">
                    <Label Text="🌍 Soil Moisture" 
                           FontSize="18" 
                           FontAttributes="Bold"
                           TextColor="#2E7D32"/>
                    <Label Text="{Binding SoilMoistureText}" 
                           FontSize="16" 
                           TextColor="#666"/>
                </VerticalStackLayout>
            </Frame>


            <!-- Severity -->
            <Frame BackgroundColor="#F5F5F5" CornerRadius="10" Padding="15">
                <VerticalStackLayout Spacing="10">
                    <Label Text="⚠️ Severity" 
                           FontSize="18" 
                           FontAttributes="Bold"
                           TextColor="#2E7D32"/>
                    <Label Text="{Binding SeverityText}" 
                           FontSize="16" 
                           TextColor="{Binding SeverityColor}"
                           FontAttributes="Bold"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Location -->
            <Frame BackgroundColor="#F5F5F5" CornerRadius="10" Padding="15">
                <VerticalStackLayout Spacing="10">
                    <Label Text="📍 Location" 
                           FontSize="18" 
                           FontAttributes="Bold"
                           TextColor="#2E7D32"/>
                    <Label Text="{Binding LocationText}" 
                           FontSize="16" 
                           TextColor="#666"/>
                </VerticalStackLayout>
            </Frame>
            
            <!-- Timestamp -->
            <Frame BackgroundColor="#F5F5F5" CornerRadius="10" Padding="15">
                <VerticalStackLayout Spacing="10">
                    <Label Text="🕒 Timestamp" 
                           FontSize="18" 
                           FontAttributes="Bold"
                           TextColor="#2E7D32"/>
                    <Label Text="{Binding TimestampText}" 
                           FontSize="16" 
                           TextColor="#666"/>
                </VerticalStackLayout>
            </Frame>
            
            <!-- Notes -->
            <Frame BackgroundColor="#F5F5F5" CornerRadius="10" Padding="15">
                <VerticalStackLayout Spacing="10">
                    <Label Text="📝 Notes" 
                           FontSize="18" 
                           FontAttributes="Bold"
                           TextColor="#2E7D32"/>
                    <Label Text="{Binding NotesText}" 
                           FontSize="16" 
                           TextColor="#666"/>
                </VerticalStackLayout>
            </Frame>
            
            <!-- Action Buttons -->
            <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                <Button Grid.Column="0"
                        Text="← Back"
                        Command="{Binding GoBackCommand}"
                        BackgroundColor="#666"
                        TextColor="White"
                        CornerRadius="8"
                        FontSize="16"
                        FontAttributes="Bold"
                        HorizontalOptions="Fill"/>
                
                <Button Grid.Column="1"
                        Text="✏️ Edit"
                        Command="{Binding EditObservationCommand}"
                        BackgroundColor="#FF9800"
                        TextColor="White"
                        CornerRadius="8"
                        FontSize="16"
                        FontAttributes="Bold"
                        HorizontalOptions="Fill"/>
            </Grid>
            
        </VerticalStackLayout>
    </ScrollView>
</ContentPage> 