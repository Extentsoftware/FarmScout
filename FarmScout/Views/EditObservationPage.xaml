<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:FarmScout.Models"
             xmlns:converters="clr-namespace:FarmScout.Converters"
             x:Class="FarmScout.Views.EditObservationPage"
             x:DataType="viewmodels:EditObservationViewModel"
             xmlns:viewmodels="clr-namespace:FarmScout.ViewModels"
             Title="{Binding Title}">
    
    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">
            
            <!-- Header -->
            <Label Text="Edit Observation" 
                   FontSize="24" 
                   FontAttributes="Bold" 
                   HorizontalOptions="Center"
                   TextColor="#2E7D32"/>
            
            <!-- Observation Types -->
            <Frame BackgroundColor="#F5F5F5" CornerRadius="10" Padding="15">
                <VerticalStackLayout Spacing="10">
                    <Label Text="📝 Observation Types" 
                           FontSize="18" 
                           FontAttributes="Bold"
                           TextColor="#2E7D32"/>
                    
                    <Button Text="{Binding SelectedTypesDisplay, StringFormat='Selected: {0}'}"
                            Command="{Binding ShowObservationTypesCommand}"
                            BackgroundColor="#E8F5E8"
                            TextColor="#2E7D32"
                            CornerRadius="8"
                            HorizontalOptions="Fill"/>
                </VerticalStackLayout>
            </Frame>
            
            <!-- Soil Moisture -->
            <Frame BackgroundColor="#F5F5F5" CornerRadius="10" Padding="15"
                   IsVisible="{Binding SelectedObservationTypes, Converter={StaticResource StringContainsConverter}, ConverterParameter=Soil Moisture}">
                <VerticalStackLayout Spacing="10">
                    <Label Text="🌍 Soil Moisture" 
                           FontSize="18" 
                           FontAttributes="Bold"
                           TextColor="#2E7D32"/>
                    
                    <Slider Value="{Binding SoilMoisture}" 
                            Minimum="0" 
                            Maximum="100"
                            ThumbColor="#2E7D32"
                            MinimumTrackColor="#4CAF50"
                            MaximumTrackColor="#E0E0E0"/>
                    
                    <Label Text="{Binding SoilMoisture, StringFormat='{0:F0}%'}" 
                           FontSize="16" 
                           HorizontalOptions="Center"
                           TextColor="#2E7D32"/>
                </VerticalStackLayout>
            </Frame>
            
            <!-- Severity -->
            <Frame BackgroundColor="#F5F5F5" CornerRadius="10" Padding="15">
                <VerticalStackLayout Spacing="10">
                    <Label Text="⚠️ Severity" 
                           FontSize="18" 
                           FontAttributes="Bold"
                           TextColor="#2E7D32"/>
                    
                    <Button Text="{Binding SeverityDisplay}"
                            Command="{Binding ShowSeverityCommand}"
                            BackgroundColor="{Binding SeverityColor}"
                            TextColor="White"
                            CornerRadius="8"
                            HorizontalOptions="Fill"/>
                </VerticalStackLayout>
            </Frame>
            
            <!-- Farm Location -->
            <Frame BackgroundColor="#F5F5F5" CornerRadius="10" Padding="15">
                <VerticalStackLayout Spacing="10">
                    <Label Text="🏠 Farm Location" 
                           FontSize="18" 
                           FontAttributes="Bold"
                           TextColor="#2E7D32"/>
                    
                    <Button Text="{Binding SelectedFarmLocation, StringFormat='Location: {0}'}"
                            Command="{Binding ShowFarmLocationCommand}"
                            BackgroundColor="#E8F5E8"
                            TextColor="#2E7D32"
                            CornerRadius="8"
                            HorizontalOptions="Fill"/>
                </VerticalStackLayout>
            </Frame>
            
            <!-- Additional Metrics -->
            <Frame BackgroundColor="#F5F5F5" CornerRadius="10" Padding="15"
                   IsVisible="{Binding SelectedObservationTypes, Converter={StaticResource StringContainsConverter}, ConverterParameter=Disease}">
                <VerticalStackLayout Spacing="10">
                    <Label Text="🦠 Disease Information" 
                           FontSize="18" 
                           FontAttributes="Bold"
                           TextColor="#2E7D32"/>
                    
                    <Entry Placeholder="Disease Name" 
                           Text="{Binding DiseaseName}"
                           TextColor="Black"
                           BackgroundColor="White"
                           PlaceholderColor="#999"/>
                    
                    <Entry Placeholder="Disease Type" 
                           Text="{Binding DiseaseType}"
                           TextColor="Black"
                           BackgroundColor="White"
                           PlaceholderColor="#999"/>
                </VerticalStackLayout>
            </Frame>
            
            <Frame BackgroundColor="#F5F5F5" CornerRadius="10" Padding="15"
                   IsVisible="{Binding SelectedObservationTypes, Converter={StaticResource StringContainsConverter}, ConverterParameter=Pest}">
                <VerticalStackLayout Spacing="10">
                    <Label Text="🐛 Pest Information" 
                           FontSize="18" 
                           FontAttributes="Bold"
                           TextColor="#2E7D32"/>
                    
                    <Entry Placeholder="Pest Name" 
                           Text="{Binding PestName}"
                           TextColor="Black"
                           BackgroundColor="White"
                           PlaceholderColor="#999"/>
                    
                    <Entry Placeholder="Pest Count" 
                           Text="{Binding PestCount}"
                           TextColor="Black"
                           BackgroundColor="White"
                           PlaceholderColor="#999"
                           Keyboard="Numeric"/>
                </VerticalStackLayout>
            </Frame>
            
            <Frame BackgroundColor="#F5F5F5" CornerRadius="10" Padding="15"
                   IsVisible="{Binding SelectedObservationTypes, Converter={StaticResource StringContainsConverter}, ConverterParameter=Harvest}">
                <VerticalStackLayout Spacing="10">
                    <Label Text="🌾 Harvest Information" 
                           FontSize="18" 
                           FontAttributes="Bold"
                           TextColor="#2E7D32"/>
                    
                    <Entry Placeholder="Crop Type" 
                           Text="{Binding CropType}"
                           TextColor="Black"
                           BackgroundColor="White"
                           PlaceholderColor="#999"/>
                    
                    <Entry Placeholder="Weight (kg)" 
                           Text="{Binding HarvestWeight}"
                           TextColor="Black"
                           BackgroundColor="White"
                           PlaceholderColor="#999"
                           Keyboard="Numeric"/>
                    
                    <Entry Placeholder="Quantity" 
                           Text="{Binding HarvestQuantity}"
                           TextColor="Black"
                           BackgroundColor="White"
                           PlaceholderColor="#999"
                           Keyboard="Numeric"/>
                </VerticalStackLayout>
            </Frame>
            
            <Frame BackgroundColor="#F5F5F5" CornerRadius="10" Padding="15"
                   IsVisible="{Binding SelectedObservationTypes, Converter={StaticResource StringContainsConverter}, ConverterParameter=Weather}">
                <VerticalStackLayout Spacing="10">
                    <Label Text="🌤️ Weather Information" 
                           FontSize="18" 
                           FontAttributes="Bold"
                           TextColor="#2E7D32"/>
                    
                    <Entry Placeholder="Temperature (°C)" 
                           Text="{Binding Temperature}"
                           TextColor="Black"
                           BackgroundColor="White"
                           PlaceholderColor="#999"
                           Keyboard="Numeric"/>
                    
                    <Entry Placeholder="Humidity (%)" 
                           Text="{Binding Humidity}"
                           TextColor="Black"
                           BackgroundColor="White"
                           PlaceholderColor="#999"
                           Keyboard="Numeric"/>
                    
                    <Entry Placeholder="Wind Speed (km/h)" 
                           Text="{Binding WindSpeed}"
                           TextColor="Black"
                           BackgroundColor="White"
                           PlaceholderColor="#999"
                           Keyboard="Numeric"/>
                </VerticalStackLayout>
            </Frame>
            
            <Frame BackgroundColor="#F5F5F5" CornerRadius="10" Padding="15"
                   IsVisible="{Binding SelectedObservationTypes, Converter={StaticResource StringContainsConverter}, ConverterParameter=Soil}">
                <VerticalStackLayout Spacing="10">
                    <Label Text="🌍 Soil Information" 
                           FontSize="18" 
                           FontAttributes="Bold"
                           TextColor="#2E7D32"/>
                    
                    <Entry Placeholder="pH Level" 
                           Text="{Binding SoilPH}"
                           TextColor="Black"
                           BackgroundColor="White"
                           PlaceholderColor="#999"
                           Keyboard="Numeric"/>
                    
                    <Entry Placeholder="Nitrogen (N)" 
                           Text="{Binding SoilNitrogen}"
                           TextColor="Black"
                           BackgroundColor="White"
                           PlaceholderColor="#999"
                           Keyboard="Numeric"/>
                    
                    <Entry Placeholder="Phosphorus (P)" 
                           Text="{Binding SoilPhosphorus}"
                           TextColor="Black"
                           BackgroundColor="White"
                           PlaceholderColor="#999"
                           Keyboard="Numeric"/>
                    
                    <Entry Placeholder="Potassium (K)" 
                           Text="{Binding SoilPotassium}"
                           TextColor="Black"
                           BackgroundColor="White"
                           PlaceholderColor="#999"
                           Keyboard="Numeric"/>
                </VerticalStackLayout>
            </Frame>
            
            <!-- Photos -->
            <Frame BackgroundColor="#F5F5F5" CornerRadius="10" Padding="15">
                <VerticalStackLayout Spacing="10">
                    <Label Text="📷 Photos" 
                           FontSize="18" 
                           FontAttributes="Bold"
                           TextColor="#2E7D32"/>
                    
                    <Button Text="Add Photo" 
                            Command="{Binding AddPhotoCommand}"
                            BackgroundColor="#2196F3"
                            TextColor="White"
                            CornerRadius="8"
                            HorizontalOptions="Fill"/>
                    
                    <CollectionView ItemsSource="{Binding Photos}" 
                                  IsVisible="{Binding HasPhotos}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="models:ObservationPhoto">
                                <Frame Margin="5" 
                                       BackgroundColor="White" 
                                       CornerRadius="5" 
                                       Padding="10">
                                    <Grid RowDefinitions="Auto,Auto">
                                        <Image Grid.Row="0" 
                                               Source="{Binding PhotoPath}" 
                                               HeightRequest="150"
                                               Aspect="AspectFill"
                                               HorizontalOptions="Center"/>
                                        <Button Grid.Row="1" 
                                                Text="❌ Remove" 
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.RemovePhotoCommand}"
                                                CommandParameter="{Binding}"
                                                BackgroundColor="#FF5722"
                                                TextColor="White"
                                                CornerRadius="5"
                                                Margin="0,5,0,0"/>
                                    </Grid>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </Frame>
            
            <!-- Location -->
            <Frame BackgroundColor="#F5F5F5" CornerRadius="10" Padding="15">
                <VerticalStackLayout Spacing="10">
                    <Label Text="📍 Location" 
                           FontSize="18" 
                           FontAttributes="Bold"
                           TextColor="#2E7D32"/>
                    
                    <Button Text="Get Current Location" 
                            Command="{Binding GetLocationCommand}"
                            BackgroundColor="#FF9800"
                            TextColor="White"
                            CornerRadius="8"
                            HorizontalOptions="Fill"/>
                    
                    <CollectionView ItemsSource="{Binding Locations}" 
                                  IsVisible="{Binding HasLocations}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="models:ObservationLocation">
                                <Frame Margin="5" 
                                       BackgroundColor="White" 
                                       CornerRadius="5" 
                                       Padding="10">
                                    <VerticalStackLayout Spacing="5">
                                        <Label Text="{Binding Description}" 
                                               TextColor="Black"
                                               FontAttributes="Bold"/>
                                        <Label Text="{Binding Latitude, StringFormat='Latitude: {0:F6}'}" 
                                               TextColor="#666"
                                               FontSize="12"/>
                                        <Label Text="{Binding Longitude, StringFormat='Longitude: {0:F6}'}" 
                                               TextColor="#666"
                                               FontSize="12"/>
                                        <Button Text="❌ Remove" 
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.RemoveLocationCommand}"
                                                CommandParameter="{Binding}"
                                                BackgroundColor="#FF5722"
                                                TextColor="White"
                                                CornerRadius="5"
                                                Margin="0,5,0,0"/>
                                    </VerticalStackLayout>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </Frame>
            
            <!-- Notes -->
            <Frame BackgroundColor="#F5F5F5" CornerRadius="10" Padding="15">
                <VerticalStackLayout Spacing="10">
                    <Label Text="📝 Notes" 
                           FontSize="18" 
                           FontAttributes="Bold"
                           TextColor="#2E7D32"/>
                    
                    <Editor Placeholder="Enter additional notes..." 
                            Text="{Binding Notes}"
                            TextColor="Black"
                            BackgroundColor="White"
                            PlaceholderColor="#999"
                            AutoSize="TextChanges"
                            MinimumHeightRequest="100"/>
                </VerticalStackLayout>
            </Frame>
            
            <!-- Update Button -->
            <Button Text="💾 Update Observation" 
                    Command="{Binding UpdateObservationCommand}"
                    BackgroundColor="#FF9800"
                    TextColor="White"
                    CornerRadius="8"
                    FontSize="18"
                    FontAttributes="Bold"
                    HorizontalOptions="Fill"/>
            
        </VerticalStackLayout>
    </ScrollView>
</ContentPage> 