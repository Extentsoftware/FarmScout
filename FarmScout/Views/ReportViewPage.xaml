<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FarmScout.Views.ReportViewPage"
             x:DataType="viewmodels:ReportViewViewModel"
             xmlns:viewmodels="clr-namespace:FarmScout.ViewModels"
             Title="{Binding ReportTitle}">
    
    <Grid RowDefinitions="Auto,*">
        <!-- Header -->
        <Border Grid.Row="0" 
                BackgroundColor="#E8F5E8" 
                Padding="15"
                Margin="10">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="10" />
            </Border.StrokeShape>
            <Grid ColumnDefinitions="*,Auto">
                <VerticalStackLayout Grid.Column="0" Spacing="5">
                    <Label Text="{Binding ReportTitle}" 
                           FontSize="18" 
                           FontAttributes="Bold"
                           TextColor="#2E7D32"/>
                    <Label Text="{Binding ReportDate, StringFormat='Generated: {0:MMM dd, yyyy HH:mm}'}" 
                           FontSize="12" 
                           TextColor="#666"/>
                </VerticalStackLayout>
                <Button Grid.Column="1" 
                        Text="âœ•" 
                        BackgroundColor="#FF5722" 
                        TextColor="White"
                        CornerRadius="20"
                        WidthRequest="40"
                        HeightRequest="40"
                        Command="{Binding CloseCommand}"/>
            </Grid>
        </Border>
        
        <!-- Report Content -->
        <ScrollView Grid.Row="1" Margin="10">
            <Border BackgroundColor="White" 
                    Padding="20"
                    Margin="0,0,0,20">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="10" />
                </Border.StrokeShape>
                <Label Text="{Binding FormattedContent}" 
                       FontSize="14"
                       LineHeight="1.5"
                       TextType="Html"/>
            </Border>
        </ScrollView>
    </Grid>
</ContentPage> 