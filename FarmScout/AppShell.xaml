<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="FarmScout.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:FarmScout.Views"
    >

    <TabBar>
        <Tab Title="Dashboard">
            <ShellContent ContentTemplate="{DataTemplate views:DashboardPage}" />
        </Tab>
        <Tab Title="Observations">
            <ShellContent ContentTemplate="{DataTemplate views:ObservationsPage}" />
        </Tab>
        <Tab Title="Lookups">
            <ShellContent ContentTemplate="{DataTemplate views:LookupPage}" />
        </Tab>
        <Tab Title="Settings">
            <ShellContent ContentTemplate="{DataTemplate views:SettingsPage}" />
        </Tab>
    </TabBar>

</Shell>
